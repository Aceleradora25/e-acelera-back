{
	"compilerOptions": {
		"target": "esnext",
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "dist",
		"paths": {
			"@/root/*": [
				"./*"
			],
			"@/src/*": [
				"./src/*"
			],
			"@/routes/*": [
				"./src/routes/*"
			],
			"@/dtos/*": [
				"./src/dtos/*"
			],
			"@/middlewares/*": [
				"./src/middleware/*"
			],
			"@/errors/*": [
				"./src/errors/*"
			],
			"@/controllers/*": [
				"./src/controllers/*"
			],
			"@/services/*": [
				"./src/services/*"
			],
			"@/utils/*": [
				"./src/utils/*"
			],
			"@/types/*": [
				"./src/types/*"
			]
		}
	},
	"include": [
		"next-env.d.ts",
		"src/**/*.ts",
		"src/**/*.tsx",
		"tests/**/*.ts",
		"prisma/seed.js"
	],
	"exclude": [
		"node_modules",
		".adminjs",
		"dist",
		"prisma"
	]
}