{
	"compilerOptions": {
		"target": "esnext",
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"strict": true,
		"outDir": "dist",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
	},
	"include": [
		"next-env.d.ts",
		"src/**/*.ts",
		"src/**/*.tsx",
		"tests/**/*.ts",
		"prisma/seed.js"
	],
	"exclude": [
		"node_modules",
		".adminjs",
		"dist",
		"prisma"
	]
}