generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  provider  String
  loginDate DateTime
  Progress  Progress[]
}

model Progress {
  itemId  String
  topicId String
  themeId String

  itemStatus  ItemStatus
  elementType ElementType
  modifiedAt  DateTime    @updatedAt

  userId Int
  user   User @relation(fields: [userId], references: [id])

  @@unique([itemId, userId])
}

enum ItemStatus {
  NotStarted
  InProgress
  Completed
}

enum ElementType {
  Video
  Exercise
}

model Theme {
  id              String   @id @default(cuid())
  title           String   @unique
  description     String?
  cardDescription String?
  image           String?
  category        String?
  sequence        Int      @default(0)
  alt             String?

  topic           Topic[]
}

model Topic {
  id              String   @id @default(cuid())
  title           String   @unique
  cardDescription String?
  description     String?
  references      String?

  themeId         String
  theme           Theme     @relation(fields: [themeId], references:[id])

  exercises       Exercise[]
  videos          Video[]
}

model Exercise {
  id              String   @id @default(cuid())
  title           String   @unique
  description     String?
  sequence        Int      @default(0)

  topicId         String
  topic           Topic    @relation(fields: [topicId], references: [id])
}

model Video{
  id              String   @id @default(cuid())
  title           String   @unique
  description     String?
  references      String?
  link            String   @unique

  topicId         String
  topic           Topic    @relation(fields: [topicId], references:[id])
}
