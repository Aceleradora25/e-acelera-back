generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  provider  String
  loginDate DateTime
  Progress  Progress[]
}

model Progress {
  itemId  String
  topicId String
  themeId String

  itemStatus  ItemStatus
  elementType ElementType
  modifiedAt  DateTime    @updatedAt

  userId Int
  user   User @relation(fields: [userId], references: [id])

  @@unique([itemId, userId])
}

enum ItemStatus {
  NotStarted
  InProgress
  Completed
}

enum ElementType {
  Video
  Exercise
}

model themes {
  idThemes        String   @id @default(cuid())
  title           String   @unique
  description     String?
  cardDescription String?
  image           String?
  category        String?
  sequence        Int?      @default(0)
  alt             String?

  topic           topics[]
}

model topics {
  idTopics        String   @id @default(cuid())
  title           String   @unique
  cardDescription String?
  description     String?
  references      String?

  themeId         String?
  theme           themes?  @relation(fields: [themeId], references:[idThemes])

  exercises       exercises[]
  videos          videos[]
}

model exercises {
  idExercises     String   @id @default(cuid())
  title           String   @unique
  cardDescription String?
  description     String?
  sequence        Int?      @default(0)

  topicId          String?
  topic            topics?   @relation(fields: [topicId], references: [idTopics])
}

model videos {
  idVideos        String   @id @default(cuid())
  title           String   @unique
  description     String?
  references      String?
  link            String   @unique

  topicId         String?
  topic           topics?    @relation(fields: [topicId], references:[idTopics])
}

model AdminUser {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      Role     @default(VIEWER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  ADMIN
  EDITOR
  VIEWER
}
